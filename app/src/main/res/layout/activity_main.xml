<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/creditScoreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Credit Score"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/creditScoreValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/creditScoreLabel"
        android:textSize="24sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="8dp"/>

    <ProgressBar
        android:id="@+id/creditScoreProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/creditScoreValue"
        android:layout_marginTop="16dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/progress_bar_drawable"
        android:progress="80"
        android:max="100"/>

</RelativeLayout>
